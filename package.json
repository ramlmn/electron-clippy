{
  "name": "clippy",
  "version": "1.0.0-alpha.3",
  "description": "A clipboard manager built on electron",
  "license": "MIT",
  "repository": "ramlmn/electron-clippy",
  "author": {
    "name": "Ram Lmn",
    "email": "ramlmn@outlook.com",
    "url": "https://ramlmn.github.io/"
  },
  "homepage": "https://github.com/ramlmn/electron-clippy",
  "main": "./src/main/main.js",
  "scripts": {
    "lint": "eslint src",
    "start": "electron .",
    "build": "build",
    "pack": "build --dir"
  },
  "devDependencies": {
    "electron": "^1.6.11",
    "electron-builder": "^19.8.0",
    "eslint": "^4.1.1",
    "eslint-config-google": "^0.8.0",
    "eslint-plugin-html": "^3.0.0"
  },
  "build": {
    "productName": "Clippy",
    "appId": "com.ramlmn.clippy",
    "files": [
      "src/**/*",
      "node_modules",
      "!(*.markdown|*.md|*.txt|.*|LICENSE|README|test)"
    ],
    "win": {
      "icon": "media/icon/clip-icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "license": "LICENSE",
      "perMachine": true,
      "deleteAppDataOnUninstall": true
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.1"
  }
}
